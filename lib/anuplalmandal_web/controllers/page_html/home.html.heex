<script type="text/javascript">
  const sorter = btn => {
    const cards = [...document.querySelectorAll('.col-md-4')]
    const container = document.querySelector('.container-cards')
    let deck = []
    let btnDisabled = document.querySelector('.disabled')
    const filter = id => id.dataset.filter
    const type = id => id.dataset.type

    cards.forEach(el => {
      console.log(el)
      const from = id => el.querySelector(id).innerText
      // console.log(from)
      let card = { available: from('.card-notify-badge'), price: from('.price'), year: from('.card-notify-year'), val: from('.pages'), name: from('h5'), card: el }
      deck.push(card)
      el.remove()
    })

    if (btnDisabled) {
      btnDisabled.classList.toggle('disabled')
      if (btn == btnDisabled)
        btnDisabled.dataset.type = type(btnDisabled) == 'नीचे' ? 'ऊपर' : 'नीचे'
      btnDisabled.innerText = `${filter(btnDisabled)} से क्रमबद्ध करें! -${type(btnDisabled)}!`
    }
    btn.innerText = `${filter(btn)} से क्रमबद्ध - ${type(btn)}!`
    btn.classList.toggle('disabled')
    deck.sort((a, b) => {
      if (filter(btn) == 'नाम')
        return type(btn) == 'ऊपर' ? a.name.localeCompare(b.name) : b.name.localeCompare(a.name)
      if (filter(btn) == 'पृष्ठ संख्या')
        return type(btn) == "ऊपर" ? a.val - b.val : b.val - a.val
      if (filter(btn) == 'प्रकाशन वर्ष')
        return type(btn) == "ऊपर" ? a.year - b.year : b.year - a.year
      if (filter(btn) == 'मूल्य')
        return type(btn) == "ऊपर" ? a.price - b.price : b.price - a.price
      if (filter(btn) == 'उपलब्धता')
        return type(btn) == "ऊपर" ? a.available.localeCompare(b.available) : b.available.localeCompare(a.available)
    })
    deck.forEach(el => container.append(el.card))
  }

  document.querySelectorAll('.button').forEach(btn =>
    btn.addEventListener('click', e => sorter(e.currentTarget)))

  const getCellValue = (tr, idx) => tr.children[idx].innerText || tr.children[idx].textContent;

  const comparer = (idx, asc) => (a, b) => ((v1, v2) =>
    v1 !== '' && v2 !== '' && !isNaN(v1) && !isNaN(v2) ? v1 - v2 : v1.toString().localeCompare(v2)
  )(getCellValue(asc ? a : b, idx), getCellValue(asc ? b : a, idx));

  // do the work...
  document.querySelectorAll('th').forEach(th => th.addEventListener('click', (() => {
    const table = th.closest('table');
    Array.from(table.querySelectorAll('tr:nth-child(n+2)'))
      .sort(comparer(Array.from(th.parentNode.children).indexOf(th), this.asc = !this.asc))
      .forEach(tr => table.appendChild(tr));
  })));

</script>
